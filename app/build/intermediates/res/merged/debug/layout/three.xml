<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="@string/Opisanie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonOpis3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:text="Заказать"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBy3"
        android:textSize="18sp"
        android:layout_above="@+id/buttonOpis3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAdd3"
        android:layout_alignBaseline="@+id/buttonDel3"
        android:layout_alignBottom="@+id/buttonDel3"
        android:layout_toRightOf="@+id/textViewKol3"
        android:layout_toEndOf="@+id/textViewKol3" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDel3"
        android:layout_above="@+id/buttonBy3"
        android:layout_toLeftOf="@+id/textViewKol3"
        android:layout_toStartOf="@+id/textViewKol3" />

    <TextView
        android:text="@string/textviewKol1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewKol3"
        android:layout_above="@+id/buttonDel3"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewZaglavie3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Горная Вершина"
        android:textSize="30sp"
        android:layout_below="@+id/textViewNomer3"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/gornversh"
        android:id="@+id/imageGorVersh"
        android:contentDescription="Горная вершина"
        android:background="@drawable/gornversh"
        android:layout_below="@+id/textViewZaglavie3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewStoim3"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/imageGorVersh"
        android:layout_toRightOf="@+id/textViewCena3"
        android:layout_toEndOf="@+id/textViewCena3" />

    <TextView
        android:text="@string/PozvoniteNam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPozvonNam3"
        tools:ignore="UnknownId"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNomer3"
        tools:ignore="RtlHardcoded,UnknownId"
        android:textSize="18sp"
        android:text="111111"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textViewPozvonNam3"
        android:layout_toEndOf="@+id/textViewPozvonNam3" />

    <TextView
        android:text="Цена"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCena3"
        android:textSize="18sp"
        android:layout_below="@+id/imageGorVersh"
        android:layout_alignLeft="@+id/textViewNomer3"
        android:layout_alignStart="@+id/textViewNomer3" />

</RelativeLayout>